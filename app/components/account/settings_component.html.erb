<div class="table-responsive mt-4">
  <table class="table align-middle">
    <tbody>
      <tr>
        <th scope="row">
          Name
        </th>
        <td>
          <%= full_name %>
        </td>
      </tr>
      <tr>
        <th scope="row">
          Email
        </th>
        <td>
          <%= email %>
        </td>
      </tr>
      <tr>
        <th scope="row">
          <%= t('account.settings.terms.user_group') %>
        </th>
        <td>
          <%= alma_user_group %>
        </td>
      </tr>
    </tbody>
  </table>
</div>

<p class="callout">
  <strong><%= t('account.guide_callout') %></strong> <%= t('account.settings.update_details_html', url: t('urls.guides.account') ) %>
</p>

<h2 class="h5 mt-4"><%= t('account.settings.terms.bbm_delivery_address') %></h2>
<% if bbm_delivery_address.present? %>
  <p>
    <% bbm_delivery_address.each do |ele| %>
      <%= ele %><br/>
    <% end %>
  </p>
<% else %>
  <p class="text-muted"><%= t('account.settings.bbm_empty') %></p>
<% end %>

<p class="callout">
  <strong><%= t('account.guide_callout') %></strong> <%= t('account.settings.set_your_address_html', url: t('urls.guides.bbm') ) %>
</p>

