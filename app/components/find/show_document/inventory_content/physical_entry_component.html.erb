<p class="document-inventory">
  <span class="inventory-item__header"><%= entry.location %></span>
  <span class="inventory-item__main"><%= entry.description %></span>
  <span class="inventory-item__sub-main"><%= entry.coverage_statement %></span>
</p>
<p class="inventory-item__availability inventory-item__availability--primary">
  <span class="inventory-item__availability-main"><%= entry.human_readable_status %></span>
  <span class="inventory-item__availability-footer"><%= availability_description %></span>
</p>

<details class="fulfillment">
  <summary class="btn btn-success btn-lg fulfillment__summary">Request an item</summary>

  <form class="fulfillment-form mt-4">
    <h2 class="h4">Request an item</h2>
    <label class="h6 mt-2" for="requested-item">What item are you requesting?</label>
    <select class="form-select mb-4 mw-60" id="requested-item">
      <option selected>Choose an item</option>
      <option value="1">One</option>
      <option value="2">Two</option>
      <option value="3">Three</option>
    </select>

    <fieldset>
      <legend class="h6">
        How would you like it delivered?
      </legend>
      <div class="form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="request-item-delivery-choice" id="pick-up" checked>
          Pick up
        </label>
        <select class="form-select mt-1" aria-label="Pick up location">
          <option selected>Choose a pick up location</option>
          <option value="1">One</option>
          <option value="2">Two</option>
          <option value="3">Three</option>
        </select>
      </div>
      <!--
      <div class="form-check mt-2">
        <label class="form-check-label" for="mail-it">
          <input class="form-check-input" type="radio" name="request-item-delivery-choice" id="mail-it">
          Mail it<br>
          <small class="text-muted">For those registered with <a href="https://upenn.libwizard.com/f/books-by-mail">Books by Mail</a> at no charge.</small>
        </label>
      </div>
      -->
      <div class="form-check mt-2">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="request-item-delivery-choice" id="faculty-express">
          Mail it via FacultyEXPRESS<br>
          <small class="text-muted">For those registered with <a href="https://upenn.libwizard.com/f/books-by-mail">Books by Mail</a> at no charge.</small>
        </label>
      </div>
      <div class="form-check mt-2">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="request-item-delivery-choice" id="scan-it">
          Scan it and email me a PDF
        </label>
      </div>
    </fieldset>

    <p class="mt-3 mb-1"><small class="text-muted">We'll send you an email notification when your item is ready.</small></p>
    <button class="btn btn-success btn-lg mt-1 mb-2">Place request</button>
  </form>
</details>
