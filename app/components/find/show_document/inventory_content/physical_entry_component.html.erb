<p class="document-inventory">
  <span class="inventory-item__header"><%= entry.location %></span>
  <span class="inventory-item__main"><%= entry.description %></span>
  <span class="inventory-item__sub-main"><%= entry.coverage_statement %></span>
</p>
<p class="inventory-item__availability inventory-item__availability--primary">
  <span class="inventory-item__availability-main"><%= entry.human_readable_status %></span>
  <span class="inventory-item__availability-footer"><%= availability_description %></span>
</p>

<% if user.nil? %>
  <%= link_to t('requests.form.log_in_to_request_item'), login_path, class: 'btn btn-success' %>
<% else %>
  <details class="fulfillment">
    <summary class="btn btn-success btn-lg fulfillment__summary"><%= t('requests.form.request_item') %></summary>
    <%= turbo_frame_tag 'form_frame', src: request_form_path(mms_id: entry.mms_id, holding_id: entry.id), loading: 'lazy' do %>
      <%# TODO: spinner? %>
      <div>Loading...</div>
    <% end %>
  </details>
<% end %>
