<ol class="holdings">
  <turbo-frame id="inventory_<%= id %>" src="<%= brief_inventory_path(id) %>" target="_top">
    <%= resource_link_entries %>
    <% skeleton_entry_count.times do %>
    <li class="holding__item holding__item--loading placeholder-glow" role="status">
      <div class="placeholder-glow">
        <span class="visually-hidden"><%= t('inventory.entries.loading') %></span>
        <span class="placeholder col-3"></span>
      </div>
      <div class="placeholder-glow">
        <span class="placeholder col-1"></span>
        <span class="placeholder col-3"></span>
      </div>
    </li>
    <% end %>
  </turbo-frame>
  <% if remainder_count.positive? %>
  <li>
    <a href="<%= solr_document_path(@id) %>" class="holdings__other-link">
      <%= t('inventory.see_all', count: remainder_count, options: 'option'.pluralize(remainder_count)) %>
    </a>
  </li>
  <% end %>
</ol>