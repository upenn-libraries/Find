<div class="search-form__wrapper">
  <search class="container">
    <%# discover_discover_search_results_path %>
    <%= form_with url: '#',
                  method: 'get',
                  role: 'search',
                  class: 'search-form' do |f| %>
      <div class="input-group">
        <%= f.search_field :q || params[:q],
                           value: params[:q],
                           class: "search-form__input form-control rounded-left",
                           aria: { label: 'search for' } %>

        <%= f.submit 'Search', class: 'btn btn-primary search-btn' %>
      </div>
    <% end %>
  </search>
</div>