<%# Override of Blacklight v9.0 to:
      - remove wrapping li element
      - styling via css classes
      - removing prev arrow if there isn't a prev page %>

<%# Link to the "Previous" page
  - available local variables
    url:           url to the previous page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% unless current_page.first? %>
  <%= link_to url, :rel => 'prev', :remote => remote, class: 'btn btn-light', aria: { label: t('views.pagination.aria.go_to_previous_page') } do %>
    <%= raw(t 'views.pagination.previous') %>
  <% end %>
<% end %>
