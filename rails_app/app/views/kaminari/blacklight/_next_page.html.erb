<%# Override of Blacklight v9.0 to:
      - remove wrapping li element
      - styling via css classes
      - removing next page arrow if there isn't a next page %>

<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% unless current_page.last? %>
  <%= link_to url, :rel => 'next', :remote => remote, class: 'btn btn-light', aria: { label: t('views.pagination.aria.go_to_next_page') } do %>
    <%= raw(t 'views.pagination.next') %>
  <% end %>
<% end %>
