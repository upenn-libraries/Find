<%= render BreadcrumbsComponent.new do |component|%>
  <% component.with_breadcrumb(href: root_path) { t('account.breadcrumbs.root') } %>
  <% component.with_breadcrumb(href: account_path) { t('account.breadcrumbs.base') } %>
  <% component.with_breadcrumb(href: requests_path) { t('account.shelf.page_heading') } %>
  <% component.with_breadcrumb(active: true) { (@entry.title || @entry.id)&.truncate(50, separator: /\s/) } %>
<% end %>

<%= render(Account::ShelfEntryComponent.new(@entry)) %>