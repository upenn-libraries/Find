<li class="list-group-item">
  <%= radio_button_tag :option, 'office', checked?, data: { action: 'change->options-select#optionChanged'} %>
  <%= label_tag :option_office, t('requests.form.options.office.label') %>
  <% if user_address_set? %>
    <p class="alert alert-info my-2">
      <%= user_address.join('<br>').html_safe %>
    </p>
    <small class="text-muted">
      <%= t('requests.form.options.office.info_html', url: t('urls.request_options.office_info')) %>
    </small>
  <% else %>
    <div class="alert alert-warning my-2">
      <%= t('requests.form.options.office.warning_html', url: t('urls.request_options.office_info')) %>
    </div>
  <% end %>
</li>