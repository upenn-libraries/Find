<li class="list-group-item">
  <div class="form-check">
    <%= radio_button_tag :delivery, delivery_value, checked, id: radio_id, class: 'form-check-input', **radio_options %>
    <%= label_tag radio_id, t('requests.form.options.office.label_html'), class: 'form-check-label' %>
    <% if office_address.present? %>
      <p class="alert alert-info my-2">
        <%= office_address %>
      </p>
      <small class="text-muted">
        <%= t('requests.form.options.office.info_html', url: t('urls.guides.office')) %>
      </small>
    <% else %>
      <div class="alert alert-warning my-2">
        <%= t('requests.form.options.office.warning_html', url: t('urls.guides.office')) %>
      </div>
    <% end %>
  </div>
</li>