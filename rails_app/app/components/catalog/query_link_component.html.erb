<%= render(@layout.new(field: @field)) do |component| %>
  <% component.with_label do %>
    <%= label %>
  <% end %>
      <% @field.values.each_with_index do |show_value, index| %>
        <% component.with_value(value: show_value, index: index) do %>
        <%= link_to_query(show_value) %>
      <% end %>
  <% end %>
<% end %>
