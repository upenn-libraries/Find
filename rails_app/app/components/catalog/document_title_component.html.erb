<%# Copied template from Blacklight v9.0 to add display of vernacular title field %>

<h1 class="record-title pl-h2 pl-margin-b-l">
  <span itemprop="name"><%= @presenter.document.detailed_title %></span>
  <% if @presenter.document.alternate_title.present? %>
    <br>
    <span class="record-alternate-title"><%= @presenter.document.alternate_title %></span>
  <% end %>
</h1>
