<h1 class="visually-hidden"><%= t('discover.results.title') %></h1>

<div class="results-content container">
  <%= render(Discover::ResultsOverviewComponent.new(query: query)) %>

  <div id="results" class="results row">
    <div class="col-12 col-lg-6">
      <%= render(Discover::ResultsSkeletonComponent.new(source: Discover::Configuration::Blacklight::Find::SOURCE,
                                                        query: query)) %>
      <%= render(Discover::ResultsSkeletonComponent.new(source: Discover::Configuration::Blacklight::FindingAids::SOURCE,
                                                        query: query)) %>
    </div>
    <div class="col-12 col-lg-6">
      <%= render(Discover::ResultsSkeletonComponent.new(source: Discover::Configuration::PSE::Museum::SOURCE,
                                                        query: query, disabled: !render_pse_sources)) %>
      <%= render(Discover::ResultsSkeletonComponent.new(source: Discover::Configuration::Database::ArtCollection::SOURCE,
                                                        query: query))%>
    </div>
  </div>
</div>
